@model DirectorListModel

@{
    Layout = "_Layout";
}

<div class="container mt-5">

    <div class="row">

        @foreach (var item in @Model.directors)
        {
            <div class="col-3">
                <div class="card">

        <div class="card-body">
            
            
            <img src="~/images/@item.PhotoUrl" class="card-image img-fluid w-100 h-100">


            <h5 class="card-title">@item.Name</h5>

            <p class="card-text">Yaşı:@item.Age</p>

            <p class="card-text">Imdb:@item.Imdb</p>

<p class="card-text">Doğum Tarihi:@item.Birthday.ToShortDateString()</p>
        

        </div>

        <div class="card-footer d-flex justify-content-center">
            

            <a href="/director-detail/@item.DirectorId" class="btn btn-success">Detay</a>
        </div>

                </div>
            </div>   

        }





    </div>
</div>


