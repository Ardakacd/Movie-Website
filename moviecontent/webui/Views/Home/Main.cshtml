@model CategoryMovieListModel
@{
    Layout = "_Layout";

}

<style>

    .carousel-item {
  height: 500px;
}

.carousel-item img {
    position: absolute;
    top: 0;
    left: 0;
    min-height: 500px;
    object-fit: contain;
}
</style>

<div class="container mt-5">

  @if(@TempData["login"] != null){

    <div class="alert alert-success">
        @TempData["Login"]
    </div>
}

<div id="carouselExampleIndicators" class="carousel slide mb-5"  data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>

  </ol>
  <div class="carousel-inner ">

      @for (int i = 0; i < @Model.movies.Count(); i++)
      {
             <div class="carousel-item @(i == 0?"active":"")">
<a href="/movie-detail/@Model.movies[i].MovieId"><img src="~/images/@Model.movies[i].PhotoUrl" alt="movie-photo" class="d-block w-100"></a>
  <div class="carousel-caption d-none d-md-block ">
    <h5>@Model.movies[i].Name</h5>
    
  </div>
</div>    
      }
      

      
   
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


@foreach (var item in @Model.categories)
{
    
<div class="row mt-5">

<p class="lead d-block"><span style="color:purple">@item.CategoryName</span> <span class="mr-3">AdlÄ± Kategorideki Filmler</span>          <a href="/categories/@item.CategoryId">Daha fazla...</a></p>

</div>

<div class="row">

@foreach (var mov in @item.movies.Take(4))
{
    <div class="col-3">

    <div class="card">

        <div class="card-body">
            
            
            <img src="~/images/@mov.movie.PhotoUrl" class="card-image img-fluid w-100 h-100">
            <h5 class="card-title mt-2 mb-1 text-center">@mov.movie.Name</h5>


        </div>

        <div class="card-footer text-center">
           

            <a href="/movie-detail/@mov.movie.MovieId" class="btn btn-success ml-3 ">Detay</a>
        </div>

                </div>
            
            </div>

}

</div>





}
</div>

